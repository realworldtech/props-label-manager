# ============================================
# PROPS Print Client â€” Environment Variables
# ============================================
# Copy this file to .env and update values.

# ----- Required -----

# Django secret key (MUST be changed in production)
SECRET_KEY=dev-secret-key-change-in-production

# Debug mode (True for development, False for production)
DEBUG=True

# Comma-separated allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1

# ----- Optional -----

# Print client name (how this client identifies itself to PROPS servers)
# CLIENT_NAME=PROPS Print Client

# Timezone
# TIME_ZONE=Australia/Sydney

# Gunicorn workers (production)
# GUNICORN_WORKERS=2
